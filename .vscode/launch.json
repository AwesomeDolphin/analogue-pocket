  "version": "0.2.0",
  "configurations": [
    {
      "type": "msedge",
      "request": "launch",
      "name": "Launch Edge",
      "url": "http://localhost:4000/analogue-pocket/",
      "preLaunchTask": "Serve",
      "webRoot": "${workspaceFolder}/_site"
    },
    {
      "name": "Debug: Inventory Updater",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/.github/workflows/inventory_updater/lib/inventory_updater.rb",
      "cwd": "${workspaceFolder}",
      "args": [
        "${env:GITHUB_TOKEN}"
      ],
    },
    {
      "name": "Debug: Updater v2",
      "type": "Ruby",
      "request": "launch",
      "program": "${workspaceFolder}/.github/workflows/updater/lib/updater.rb",
      "cwd": "${workspaceFolder}",
      "args": [
        "${env:GITHUB_TOKEN}"
      ],
    }
  ]
}
